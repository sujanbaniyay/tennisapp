@{
    Layout = null; // This ensures that this view does not use a layout page.
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Membership App | Anyone For Tennis&trade;</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet"> <!-- Bootstrap CSS (you can replace this with your own CSS) -->
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .hero-section {
            background-image: url('https://images.unsplash.com/photo-1545809074-59472b3f5ecc?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
            color: #fff;
            text-align: center;
            padding: 150px 0;
        }
        .hero-section h1 {
            font-size: 3rem;
            margin-bottom: 20px;
        }
        .btn-get-started {
            font-size: 1.2rem;
            padding: 10px 30px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <section class="hero-section">
        <div class="container">
            <h1><strong>Welcome to our Anyone For Tennis&trade; App</strong></h1>
            <p>Manage schedules, connect with coaches, and stay updated on special offers.</p>
            <a asp-area="" asp-controller="Person" asp-action="Add" class="btn btn-primary btn-get-started">Get Started</a>
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

