@model Tennis.Web.Models.Domain.CoachBioMD


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Coach Biography";
    Layout = "_AdminLayout";
}

@*Just show session values and keys here*@

<div class="container mt-2">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">Bio</div>
                <div class="card-body">
                    @*show the coach's bio here inside a textarea with an update button*@
                    <form asp-action="CoachBio">
                        <label asp-for="Biography">Biography</label>
                        @{
                            var coachBio = ViewBag.CoachBioValue as string;
                        }

                        @if (coachBio != null)
                        {
                            <textarea asp-for="Biography" class="form-control" rows="10" placeholder="@coachBio"></textarea>
                        }
                        else
                        {
                            <textarea asp-for="Biography" class="form-control" rows="10"></textarea>
                        }
                        <button type="submit" class="btn btn-primary mt-2" id="updateBio">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
