@model Tennis.Web.Models.Domain.Person

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Register Coach";
}

@*Create a form to register the user*@

<div class="container mt-2">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">Register Coach</div>
                <div class="card-body">
                    <form asp-action="AddCoach">
                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="FirstName">First Name</label>
                                <input asp-for="FirstName" type="text" class="form-control">
                                <span class="text-danger" asp-validation-for="FirstName"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName">Last Name</label>
                                <input asp-for="LastName" type="text" class="form-control">
                                <span class="text-danger" asp-validation-for="LastName"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="BirthDate">Birth Date</label>
                            <input asp-for="BirthDate" type="date" class="form-control">
                            <span class="text-danger" asp-validation-for="BirthDate"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for=EmailAddress>Email</label>
                            <input asp-for=EmailAddress type="email" class="form-control">
                            <span class="text-danger" asp-validation-for="EmailAddress"></span>
                        </div>
                        @*Password and an eye to show the password*@
                        <div class="form-group">
                            <label asp-for=Password>Password</label>
                            <div class="input-group">
                                <input asp-for=Password id="Password" type="password" class="form-control">
                                <div class="input-group-append">
                                    <span class="input-group-text" style="padding: 10px !important">
                                        <i class="fa fa-eye"></i>
                                    </span>
                                </div>
                            </div>
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for=ProfilePic>Picture</label>
                            <input asp-for=ProfilePic type="file" class="form-control-file" accept="image/*">
                            <span class="text-danger" asp-validation-for="ProfilePic"></span>
                        </div>
                        @*Create a hidden role value as user*@
                        <input type="hidden" asp-for="Role" value="coach" />
                        @if (TempData["msg"] != null)
                        {
                            <div class="alert alert-success mt-2 mb-0" role="alert">
                                @TempData["msg"]
                            </div>
                        }
                        <button type="submit" class="btn btn-primary btn-block mt-1 col-12">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>