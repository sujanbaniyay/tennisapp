@model Tennis.Web.Models.Domain.Person

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="container mt-2">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">Login Form</div>
                <div class="card-body">
                    <form asp-action="Login">
                         <div class="form-group">
                            <label asp-for=EmailAddress>Email</label>
                            <input asp-for=EmailAddress type="email" class="form-control">
                            <span class="text-danger" asp-validation-for="EmailAddress"></span>
                        </div>
                        @*Password and an eye to show the password*@
                        <div class="form-group">
                            <label asp-for=Password>Password</label>
                            <div class="input-group">
                                <input asp-for=Password id="Password" type="password" class="form-control">
                                <div class="input-group-append">
                                    <span class="input-group-text" style="padding: 10px !important">
                                        <i class="fa fa-eye"></i>
                                    </span>
                                </div>
                            </div>
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        @if (TempData["msg"] != null)
                        {
                            <div class="alert alert-success mt-2 mb-0" role="alert">
                                @TempData["msg"]
                            </div>
                        }
                        <button type="submit" class="btn btn-primary btn-block mt-1 col-12">Login</button>
                        <p class="mt-2 text-muted"><small>Don't have an account?</small> <a href="/Person/Add">Register Here!</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
